{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur l'annuaire</h1>
    <table>
      <tr>
        <th>
          Nom
        </th>
        <th>
          Prénom
        </th>
        <th>
          Mail
        </th>
        <th>
          Téléphone fixe
        </th>
        <th>
          Bureau
        </th>
        <th>
          Bâtiment
        </th>
        <th>
          Tutelle
        </th>
        <th>
          Actions
        </th>
      </tr>
    {% for user in users %}
      <tr>
        <td>
          {{ user.lastname }}
        </td>
        <td>
          {{ user.firstname }}
        </td>
        <td>
          {{ user.mail }}
        </td>
        <td>
          {{ user.homephone }}
        </td>
        <td>
          {{ user.office }}
        </td>
        <td>
          {{ user.building }}
        </td>
        <td>
          {{ user.tutelle }}
        </td>
        <td>
          actions
        </td>
      </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ user.lastname }}&nbsp;{{ user.firstname }}
{% endblock %}

{% block body %}
    <div>
        <a class="lien-retour" href="{{ path("annuaire") }}">< Retour</a>
    </div>
    <div class="form-modify">
        <h1>{{ user.firstname }}&nbsp;{{ user.lastname }}</h1>
        <table class="table-user">
            <tr>
                <td>
                    Prénom
                </td>
                <td>
                    {{ user.firstname }}
                </td>
            </tr>
            <tr>
                <td>
                    Nom de famille
                </td>
                <td>
                    {{ user.lastname }}
                </td>
            </tr>
            <tr>
                <td>
                    Date de naissance
                </td>
                <td>
                    {{ user.birthdate|date('d-m-Y') }}
                </td>
            </tr>
            <tr>
                <td>
                    Lieu de naissance
                </td>
                <td>
                    {{ user.placebirth }}
                </td>
            </tr>
            <tr>
                <td>
                    E-Mail
                </td>
                <td>
                    {{ user.mail }}
                </td>
            </tr>
            <tr>
                <td>
                    Tél. fixe
                </td>
                <td>
                    {{ user.homephone }}
                </td>
            </tr>
            <tr>
                <td>
                    Tél. mobile
                </td>
                <td>
                    {{ user.mobilephone }}
                </td>
            </tr>
            <tr>
                <td>
                    Bureau
                </td>
                <td>
                    {{ user.office }}
                </td>
            </tr>
            <tr>
                <td>
                    Bâtiment
                </td>
                <td>
                    {{ user.building }}
                </td>
            </tr>
            <tr>
                <td>
                    Tutelle
                </td>
                <td>
                    {{ user.tutelle }}
                </td>
            </tr>
            <tr>
                <td>
                    Est du laboratoire
                </td>
                <td>
                    {% if user.ingeeps == 1 %}Oui{% else %}Non{% endif %}
                </td>
            </tr>
            {% if user.ingeeps == 1 %}
            <tr>
                <td>
                    Date d'arrivée
                </td>
                <td>
                    {{ user.arrivaldate|date('d-m-Y H:i:s') }}
                </td>
            </tr>
            <tr>
                <td>
                    Date de départ
                </td>
                <td>
                    {{ user.departuredate|date('d-m-Y H:i:s') }}
                </td>
            </tr>
            {% endif %}
        </table>
        <table class="table-btn" style="width: 100%; text-align:center;">
            <tr>
                <td>
                    <a href="{{ path('form_personne', { 'id': user.id }) }}">
                        <button class="btn-modify-user">Modifier</button>
                    </a>
                </td>
                <td>
                    <a href="{{ path('delete', { 'id': user.id }) }}">
                        <button class="btn-delete-user">Supprimer</button>
                    </a>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
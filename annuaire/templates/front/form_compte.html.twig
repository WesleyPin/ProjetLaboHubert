{% extends 'base.html.twig' %}

{% block title %}Annuaire
{% endblock %}

{% block body %}
<div>
    <a class="lien-retour" href="{{ path("display_personne", {'id': user.id}) }}">Retour</a>
</div>

<div class="form-modify">
    {{ form_start(form_compte) }}
    <h1>Ajout/Modification Compte</h1>
    <h2>{{ user.firstname }}
        {{ user.lastname }}</h2>
    <div class="input-text">
        {{ form_row(form_contrat.personne) }}
    </div>
    <div class="input-text">
        {{ form_row(form_compte.login) }}
    </div>
    <div class="input-text">
        {{ form_row(form_compte.role, {'label': 'Rôle'}) }}
    </div>
    <div class="input-text">
        {{ form_row(form_compte.startdate, {'label': 'Début d\'activation'}) }}
    </div>
    <div class="input-text">
        {{ form_row(form_compte.enddate, {'label': 'Date'}) }}
    </div>
    <div>
        <input type="submit" name="save" value="Sauvegarder"/>
    </div>
    {{ form_end(form_compte) }}
    </div>

{% endblock %}
